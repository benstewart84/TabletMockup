@using Booker.WebUI.Helpers
@model IEnumerable<Booker.WebUI.Models.CreditNotesInQueryModel>

@{
    ViewBag.Title = "Credit Notes in Query";
    ViewBag.MenuSection = "invoices-menu";
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="tablesPage">@ViewBag.Title</h2>

                <table id="invoices-in-query" class="clicktable responsive" data-empty-table="There are no credit notes in query">
                    <thead>
                        <tr>
                            <th>Work Order Ref</th>
                            <th>Job Ref</th>
                            <th>Site</th>
                            <th>Credit Note No</th>
                            <th>Credit Note Date</th>
                            <th>Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(item.WorkOrderRef, "CreditNote", "Supplier", new { workOrderRef = item.WorkOrderRef }, null)</td>
                                <td>@item.JobRef</td>
                                <td>@item.SiteName</td>
                                <td>@item.CreditNoteNumber</td>
                                <td>@Html.TextOrEmptyString(item.CreditNoteDate.ToShortDateString())</td>
                                <td>@item.Reason</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jquerydatatables")
}
