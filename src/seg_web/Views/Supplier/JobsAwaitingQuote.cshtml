@using Booker.WebUI.Extensions
@using Booker.WebUI.Helpers
@model IEnumerable<Booker.WebUI.Models.JobModel>

@{
    ViewBag.Title = "Jobs Awaiting Quote";
    ViewBag.MenuSection = "quotes-menu";
}

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="tablesPage">@ViewBag.Title</h2>
                <table id="awaiting-supplier-quote" class="responsive clicktable" data-empty-table="There are no jobs awaiting quote">
                    <thead>
                        <tr>
                            <th>Job Ref</th>
                            <th>Date Requested</th>
                            <th>Site</th>
                            <th>Quote due date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(string.Format("{0:0}", item.JobRef), "Register", "Quote", new { jobRef = item.JobRef }, null)</td>
                                <td>@Html.TextOrEmptyString(@item.DateRequested.ToCurrentCultureShortDate())</td>
                                <td>@Html.TextOrEmptyString(@item.SiteName)</td>
                                <td @if (item.DateRequested.Value.AddDays(Booker.Common.QuoteDueDate.QuoteDueDaysAfterRequest).Date < DateTime.Today) { @: class="warning-text"
                                                                                                                                                                       }>
                                    @Html.TextOrEmptyString(item.DateRequested.Value.AddDays(Booker.Common.QuoteDueDate.QuoteDueDaysAfterRequest).ToShortDateString())
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jquerydatatables")
}
