@using Booker.WebUI.Extensions
@using Booker.WebUI.Helpers
@model IEnumerable<Booker.WebUI.Models.JobModel>
@{
    ViewBag.Title = "Jobs Awaiting Confirmation";
    ViewBag.MenuSection = "jobs-menu";
}

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="tablesPage">@ViewBag.Title</h2>
                <table id="awaiting-confirmation" class="responsive clicktable" data-empty-table="There are no jobs awaiting confirmation">
                    <thead>
                        <tr>
                            <th>Job Ref</th>
                            <th>Job Type</th>
                            <th>Store</th>
                            <th>Fault Service</th>
                            <th>Due Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="clickable">
                                <td>@Html.ActionLink(string.Format("{0:0}", item.JobRef), "ConfirmJob", "Supplier", new { jobRef = item.JobRef }, null)</td>
                                <td>@Html.TextOrEmptyString(item.JobType)</td>
                                <td>@Html.TextOrEmptyString(item.SiteName)</td>
                                <td>@Html.TextOrEmptyString(item.FaultServiceDescription)</td>
                                <td>@Html.TextOrEmptyString(item.DueDate.ToCurrentCultureShortDate())</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jquerydatatables")
}
