@using Booker.WebUI.Helpers
@model Booker.WebUI.Models.InvoicesAwaitingApprovalModel

@{
    ViewBag.Title = "Invoices Awaiting Approval";
    ViewBag.MenuSection = "invoices-menu";
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="tablesPage">@ViewBag.Title</h2>
                <table id="invoice-awaiting-approval" class="responsive clicktable" data-empty-table="There are no invoices awaiting approval">
                    <thead>
                        <tr>
                            <th>Invoice Ref</th>
                            <th>Invoice Date</th>
                            <th>Supplier</th>
                            <th>Net ($)</th>
                            <th>Tax ($)</th>
                            <th>Gross ($)</th>
                            <th>Store</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.InvoiceApprovals)
                        {
                            @Html.FirstInvoiceApprovalTableRow(item, Model.ReadOnly)
                        }
                    </tbody>
                    <tfoot>
                    </tfoot>
                </table>
                @section scripts {
                    @Scripts.Render("~/bundles/jquerydatatables")
                }
            </div>
        </div>
    </div>
</div>