@using System.Threading
@using Booker.WebUI.Extensions
@using Booker.WebUI.Helpers
@model IEnumerable<Booker.WebUI.Models.InvoicesWithQueryAnsweredModel>

@{
    ViewBag.Title = "Invoices with Query Response";
    ViewBag.MenuSection = "invoices-menu";
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="tablesPage">@ViewBag.Title</h2>

                <table id="invoices-in-query" class="clicktable responsive" data-empty-table="There are no invoices in query">
                    <thead>
                    <tr>
                        <th>Work Order Ref</th>
                        <th>Job Ref</th>
                        <th>Site</th>
                        <th>Supplier</th>
                        <th>Invoice Ref</th>
                        <th>Invoice Date</th>
                        <th>Reason</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(item.WorkOrderRef, "FirstApproval", "InvoiceApproval", new { id = item.Id }, null)</td>
                            <td>@item.JobRef</td>
                            <td>@item.SiteName</td>
                            <td>@item.Supplier</td>
                            <td>@item.InvoiceNumber</td>
                            <td>@item.InvoiceDate.ToCurrentCultureShortDate()</td>
                            <td>@item.Reason</td>
                        </tr>
                    }
                    </tbody>
                    <tfoot></tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jquerydatatables")
}
