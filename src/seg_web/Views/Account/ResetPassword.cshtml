@model Booker.WebUI.Models.ResetPasswordModel
@{
    ViewBag.Title = "Reset User Password";
    ViewBag.MenuSection = "admin-menu";
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>@ViewBag.Title</h2>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.SelectedUser)

                    <fieldset class="header-fields">
                        <legend>Set Password Form</legend>
                        <ol>
                            <li>
                                @Html.LabelFor(m => m.SelectedUser)
                                @Model.SelectedUser
                            </li>
                            <li>
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password)
                            </li>
                            <li>
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword)
                            </li>
                        </ol>
                        <div class="header-row">
                            <div class="editor-for">
                                <p class="buttons">
                                    <input type="submit" value="Set password" class="btn btn-primary" />
                                </p>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
@section css{
    <style>
        input {
            width: 15em;
        }

        select {
            width: auto;
        }
    </style>
}
