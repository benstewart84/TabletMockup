@using Booker.WebUI.Helpers
@using Booker.Common
@model Booker.WebUI.Models.QuoteLineModel

@using (Html.BeginForm("CreateQuoteLine", "Quote", null, FormMethod.Post, new { id = "QuoteLineForm" }))
{
    <div id="QuoteLineError" class="validation-summary-errors" style="display: none">Sorry, there was an unexpected error processing your request.</div>
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ProjectQuoteId)
    @Html.HiddenFor(model => model.JobRef)

    <div class="form-group">
        <strong>Type:</strong>
        @Html.BootstrapDropDownListFor(model => model.QuoteLineTypeValue, Model.QuoteLineTypeSelectList)
    </div>
    <div class="form-group" style="@(string.Equals(Model.QuoteLineTypeDescription,QuoteLineTypes.Parts,StringComparison.InvariantCultureIgnoreCase) ? "" : "display:none")">
        <strong>Part Number:</strong>
        @Html.BootstrapTextBoxFor(model => model.PartNumber)
    </div>
    <div class="form-group">
        <strong>Description:</strong>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Enter your Description" })
    </div>
    <div class="form-group">
        <strong>Quantity:</strong>
        @Html.TextBoxFor(model => model.Quantity, "{0:F0}", new { placeholder = "Enter your Quantity", @class = "form-control" })        
    </div>
    <div class="form-group">
        <strong>Unit Price ($):</strong>
        @Html.TextBoxFor(model => model.UnitPrice, "{0:F2}", new { placeholder = "Enter your Unit Price", @class = "form-control" })
    </div>
    <div class="form-group">
        <strong>Line Value ($):</strong>
        @Html.DisplayFor(model => model.LineValue, "LineValue")
    </div>
}
<script>
    window.cf = window.cf || {};
    cf.partsLineType = "@QuoteLineTypes.Parts";
</script>