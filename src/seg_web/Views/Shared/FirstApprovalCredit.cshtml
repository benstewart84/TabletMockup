@using Booker.WebUI.Extensions
@using Booker.WebUI.Helpers
@model Booker.WebUI.Models.FirstApprovalCreditNoteModel

@{
    ViewBag.Title = Model.ReadOnly ? "View CreditNote" : "Credit Note Approval";
    ViewBag.MenuSection = "invoices-menu";
    const string controllerName = "CreditNoteApproval";
    const string documentActionName = "FirstApprovalCredit";
    var pdfUrl = Url.Action("CreditNoteDocument", controllerName, new { id = Model.CreditNoteHeader.Id, documentType = Model.CurrentDocumentType, documentReference = Model.CurrentDocumentReference });
}

@section css {
    @Styles.Render("~/Content/themes/base/css")
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>@ViewBag.Title</h2>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.CreditNoteId)
                @if (Model.IsQueried && !string.IsNullOrWhiteSpace(Model.SupplierResponse))
                {
                    <div class="validation-summary-errors">
                        This CreditNote was queried and the Supplier has provided the following response:
                        <br />
                        <br />
                        <ul style="margin-bottom: 0">
                            <li>@Model.SupplierResponse</li>
                        </ul>
                    </div>
                }

                @if (Model.Stage2RejectionReason != null)
                {
                    <p class="validation-summary-errors">
                        CreditNote rejected at stage 2 for the following reason: @Model.Stage2RejectionReason.Reason
                    </p>
                }
                @if (Model.CapexApprovalRejectionReason != null)
                {
                    <p class="validation-summary-errors">
                        CreditNote rejected by Capex uploader for the following reason: @Model.CapexApprovalRejectionReason.Reason
                    </p>
                }
                @*@if (Model.HasMissingDocuments)
                {
                    <p class="validation-summary-errors">
                        The invoice has missing documents @(Model.ReadOnly ? "" : "and cannot be approved")
                    </p>
                }*@
                <div class="invoice-approval">
                    <div class="doc-view">
                        <iframe src="@pdfUrl" scrolling="no" seamless="true"></iframe>
                    </div>

                    <div class="inv-details">

                        <div id="info-tables">

                            <table id="invoice-table" class="horiz-table">
                                <tbody>

                                    <tr>
                                        <th class="right-text w33">Credit Note Ref</th>
                                        <td>@Model.CreditNoteHeader.CreditNumber</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Credit Note Date</th>
                                        <td>@Model.CreditNoteHeader.CreditNoteDate</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Order Ref</th>
                                        <td>@Model.WorkOrder.WorkOrderRef</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Order Value ($)</th>
                                        <td>@Html.DecimalToCurrencyString(Model.WorkOrder.WorkOrderValue)</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Job Ref</th>
                                        <td>@Model.WorkOrder.JobRef</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Site</th>
                                        <td>@Html.TextOrEmptyString(Model.WorkOrder.SiteName)</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Job Date</th>
                                        <td>@Html.TextOrEmptyString(Model.WorkOrder.AlarmDate.ToCurrentCultureDateTime())</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Inv Num</th>
                                        <td>@Model.CreditNoteHeader.InvoiceNumber</td>
                                    </tr>
                                   
                                    <tr>
                                        <th class="right-text w33">Supplier</th>
                                        <td>@Model.Supplier.Name</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Net ($)</th>
                                        <td>@Html.DecimalToCurrencyString(Model.CreditNoteHeader.NetAmount)</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Tax ($)</th>
                                        <td>@Html.DecimalToCurrencyString(Model.CreditNoteHeader.VatAmount)</td>
                                    </tr>
                                    <tr>
                                        <th class="right-text w33">Gross ($)</th>
                                        <td>@Html.DecimalToCurrencyString(Model.CreditNoteHeader.GrossAmount)</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                        @{ var currentDocumentIndex = Model.CurrentDocumentIndex; }

                        <h3 class="doc-menu">Credit to Check</h3>
                        <ul class="doc-menu">
                            @{
                                for (int i = 0; i < Model.CreditNoteDocuments.Count; i++)
                                {
                                    var doc = Model.CreditNoteDocuments[i];
                                    var documentLink = Html.ActionLink(Model.CreditNoteDocuments[i].Description, documentActionName, controllerName, new { id = Model.CreditNoteId, documentIndex = i }, null);
                                    var className = Model.DocumentCheckStates.Checked(i) ? "doc-checked" : null;
                                    if (currentDocumentIndex == i)
                                    {
                                        className = Model.DocumentCheckStates.Checked(i) ? "doc-checked current" : className;
                                        documentLink = Html.ActionLink(Model.CreditNoteDocuments[i].Description, "CreditNoteDocument", controllerName, new { id = Model.CreditNoteId, documentType = doc.Code, documentReference = doc.DocumentReference, inline = false }, null);
                                    }

                                    <li class="@className">@documentLink</li>
                                }
                            }
                        </ul>
                        <div class="doc-nav">
                            <a id="DocumentNavigation" style="display: none;"></a>
                            @if (currentDocumentIndex > 0)
                            {
                                @Html.ActionLink("<< Prev", documentActionName, controllerName, new { id = Model.CreditNoteId, documentIndex = currentDocumentIndex - 1 }, new { @class = "float-left" })
                            }
                            @if (currentDocumentIndex + 1 < Model.CreditNoteDocuments.Count)
                            {
                                @Html.ActionLink("Next >>", documentActionName, controllerName, new { id = Model.CreditNoteId, documentIndex = currentDocumentIndex + 1 }, new { @class = "float-right" })
                            }
                        </div>

                        <p id="button-strip" class="button-strip clearall default-top-margin">
                            @if ((Model.CreditNoteDocuments.Count == Model.DocumentCheckStates.CountOfChecked))
                            {
                                using (Html.BeginForm("FirstApproval", controllerName, FormMethod.Post, new { style = "display: inline"}))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.CreditNoteId)
                                    @Html.HiddenForModelValue(model => model.CurrentDocumentIndex)
                                    @Html.HiddenFor(model => model.HasAuthorisationSheet)
                                    @Html.HiddenFor(model => model.IsFirstApprovalKzn)
                                    <input type="hidden" name="SelectedRejectionReason" value="-1" />
                                    <input type="submit" value="Approve" class="btn btn-primary">
                                }
                            }
                            <input id="RejectInvoice" type="button" value="Reject" class="btn btn-danger" data-toggle="modal" data-target="#RejectInvoiceModal">
                            <input id="QueryCreditNote" type="button" value="Query" class="btn btn-warning" data-toggle="modal" data-target="#QueryCreditNoteModal">
                            <input id="ViewCreditNoteLines" data-toggle="modal" data-target="#CreditNoteLinesModal" type="button" value=" Credit Note Lines" class="btn btn-default"><br/><br/>
                            <input id="ViewInvoiceHistory" data-toggle="modal" data-target="#InvoiceQueryHistoryModal" type="button" value="Invoice History" class="btn btn-info">
                            <input id="ViewCreditNoteQueryHistory" data-toggle="modal" data-target="#CreditNoteQueryHistoryModal" type="button" value="Credit Query History" class="btn  btn-success">
                        </p>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="CreditNoteLinesModal" tabindex="-1" role="dialog" aria-labelledby="CreditNoteLinesLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="InvoiceLinesLabel">CreditNote Lines</h4>
                        </div>
                        <div class="modal-body">
                            <table class="default-top-margin">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Type</th>
                                        <th class="right-text">Quantity</th>
                                        <th class="right-text">Unit Price (£)</th>
                                        <th class="right-text">Value (£)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var creditLine in Model.CreditNoteLines)
                                    {
                                        @Html.Partial("_CreditNoteLineTableRow", creditLine)
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4" class="right-text">Total Value ($):</td>
                                        <td class="right-text">@Html.DecimalToCurrencyString(Model.TotalCreditNoteLineValue)</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            @*Invoice Query History modal*@
            <div class="modal fade" id="InvoiceQueryHistoryModal" tabindex="-1" role="dialog" aria-labelledby="InvoiceQueryHistoryLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="InvoiceQueryHistoryLabel">Invoice Query History</h4>
                        </div>
                        <div class="modal-body">
                            <table class="default-top-margin">
                                <thead>
                                    <tr>
                                      
                                        <th>Query</th>
                                        <th>Query Date</th>
                                        <th>Response</th>
                                        <th>Response Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoiceQuery in Model.InvoiceQueries)
                                    {
                                        @Html.Partial("_InvoiceQueryTableRow", invoiceQuery)
                                    }
                                </tbody>
                                @*<tfoot>
                                    <tr>
                                        <td colspan="4" class="right-text">Total Value (£):</td>
                                        <td class="right-text">@Html.DecimalToCurrencyString(Model.TotalCreditNoteLineValue)</td>
                                    </tr>
                                </tfoot>*@
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="CreditNoteQueryHistoryModal" tabindex="-1" role="dialog" aria-labelledby="CreditNoteQueryHistoryLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="CreditNoteQueryHistoryLabel">Query History</h4>
                        </div>
                        <div class="modal-body">
                            <table class="default-top-margin">
                                <thead>
                                    <tr>

                                        <th>Query</th>
                                        <th>Query Date</th>
                                        <th>Response</th>
                                        <th>Response Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var creditNoteQuery in Model.CreditNoteQueries)
                                    {
                                        @Html.Partial("_CreditNoteQueryTableRow", creditNoteQuery)
                                    }
                                </tbody>
                                @*<tfoot>
                                <tr>
                                    <td colspan="4" class="right-text">Total Value (£):</td>
                                    <td class="right-text">@Html.DecimalToCurrencyString(Model.TotalCreditNoteLineValue)</td>
                                </tr>
                            </tfoot>*@
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="flb-container" class="default-top-margin">
                <a id="flb"></a>
                <table id="flb-table" class="horiz-table">
                    <tbody>
                        <tr>
                            <th class="right-text w33">Order Ref</th>
                            <td>@Model.WorkOrder.WorkOrderRef</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Order Value(£)</th>
                            <td>@Model.WorkOrder.WorkOrderValue</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Job Ref</th>
                            <td>@Model.WorkOrder.JobRef</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Store</th>
                            <td>@Html.TextOrEmptyString(Model.WorkOrder.SiteName)</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Job Date</th>
                            <td>@Html.TextOrEmptyString(Model.WorkOrder.AlarmDate.ToCurrentCultureDateTime())</td>
                        </tr>
                        
                        <tr>
                            <th class="right-text w33">Inv Number</th>
                            <td>@Html.TextOrEmptyString(Model.InvoiceHeader.InvoiceNumber)</td>
                        </tr>
                        
                        <tr>
                            <th class="right-text w33">Inv Date</th>
                            <td>@Html.TextOrEmptyString(Model.InvoiceHeader.InvoiceDate.ToCurrentCultureDateTime())</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Inv Status</th>
                            <td>@Html.TextOrEmptyString(SiteHelper.GetInvoiceStatusByInvoiceStatusTypeId(Model.InvoiceHeader.InvoiceStatusTypeId))</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Supplier</th>
                            <td>@Model.Supplier.Name</td>
                        </tr>

                        <tr>
                            <th class="right-text w33">Net(£)</th>
                            <td>@Model.InvoiceHeader.NetAmount</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">VAT(£)</th>
                            <td>@Model.InvoiceHeader.TaxAmount</td>
                        </tr>
                        <tr>
                            <th class="right-text w33">Gross(£)</th>
                            <td>@Model.InvoiceHeader.GrossAmount</td>
                        </tr>
                        @foreach (var gasUsage in Model.GasUsageDetails)
                            {
                            <tr>
                                <th class="right-text w33">Leakage code</th>
                                <td>@gasUsage.LeakageType</td>
                            </tr>
                            <tr>
                                <th class="right-text w33">Gas type</th>
                                <td>@gasUsage.GasType</td>
                            </tr>
                            <tr>
                                <th class="right-text w33">Gas quantity</th>
                                <td>@gasUsage.GasUsage</td>
                            </tr>
                            }
                        @*@foreach (var cert in Model.Certificates)
                            {
                            <tr>
                                <th class="right-text w33">@cert.CertificateType.Description</th>
                                <td>@cert.CertificateNumber</td>
                            </tr>
                            }*@
                    </tbody>
                </table>
            </div>
            <div id="closedown-events">
                <a id="ClosedownEvents"></a>
                <table class="default-top-margin">
                    <thead>
                        <tr>
                            <th>Arrival Date/Time</th>
                            <th>Onsite Hours</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ce in Model.OnSiteTimeRecords)
                            {
                            <tr>
                                <td>@ce.OnsiteSATime.ToCurrentCultureDateTime()</td>
                                <td>@ce.Hours.ToHoursAndMinutes()</td>
                            </tr>
                            }
                    </tbody>
                </table>
            </div>
            @*<div id="job-notes-container" class="default-top-margin">
                <a id="verification"></a>
                <p id="job-notes" class="job-notes">@Model.WorkOrder.JobNotes</p>
            </div>*@
            <div class="default-top-margin clear">
                <hr />
                @Html.ActionLink("<< Back to Credit notes with Query Response", "CreditNotesWithQueryResponse", controllerName, null, new { id = "BackButton" })
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="QueryCreditNoteModal" tabindex="-1" role="dialog" aria-labelledby="QueryCreditNoteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Query CreditNote</h4>
            </div>
            <div class="modal-body">
                <div id="QueryError" class="validation-summary-errors" style="display: none">Sorry, there was an unexpected error processing your request.</div>
                <form>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedQueryReason)
                        @Html.BootstrapDropDownListFor(model => model.SelectedQueryReason, Model.QueryReasonSelectList)
                    </div>
                    <div class="form-group creditnote-query-other">
                        @Html.LabelFor(model => model.Notes)
                        @Html.TextAreaFor(model => model.Notes)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="SaveQuery">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="RejectInvoiceModal" tabindex="-1" role="dialog" aria-labelledby="RejectInvoiceLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Reject CreditNote</h4>
            </div>
            <div class="modal-body">
                <div id="RejectError" class="validation-summary-errors" style="display: none">Sorry, there was an unexpected error processing your request.</div>
                <form>
                    @Html.HiddenForModelValue(model => model.CurrentDocumentIndex)
                    @Html.HiddenFor(model => model.HasAuthorisationSheet)
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedRejectionReason)
                        @Html.BootstrapDropDownListFor(model => model.SelectedRejectionReason, Model.RejectionReasonSelectList)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RejectionNotes)
                        @Html.TextAreaFor(model => model.RejectionNotes)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="SaveRejection">Save</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/dialogs")
    @Scripts.Render("~/bundles/creditnoteapproval")
}
