    <!--Font-->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
</head>
<body style="font-family: 'Open Sans';">
    <div class="color-bar">
        <div class="blue"></div>
        <div class="green"></div>
        <div class="orange"></div>
        <div class="red"></div>
        <div class="purple"></div>
    </div>

    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a class="logo" href="@Url.Action("Index", "Home", null)">
                <span></span>
            </a>
            @Html.Partial("_NavigationPartialCollapsed")
            @Html.Partial("_NavigationPartial")
        </div>
    </header>

    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog" style="border: 5px solid #3A87AD;">
        <a href="#close" title="Close" class="modal-class-btn">X</a>
        <div class="modal-content" style="width: 800px !important; margin: 10px auto !important;">
            <div class="modal-body"></div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <hr>
            <p>&copy; Copyright @DateTime.Now.Year - @Booker.Common.CompanyStrings.ShortName v@(Html.CurrentVersion())</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/globaljquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
