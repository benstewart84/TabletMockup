@using Booker.WebUI.Helpers
@model Booker.WebUI.Models.CreditNoteHeaderModel

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.WorkOrderRef)

<div class="header-row">
    <div class="form-group">
        <strong>Credit Number:</strong>
        @Html.BootstrapTextBoxFor(m => m.CreditNumber)
    </div>
    <div class="form-group">
        <strong>Credit Date:</strong>
        @Html.BootstrapTextBoxFor(model => model.CreditNoteDate, new { @class = "jquery_datepicker", autocomplete = "off" })
    </div>
    
    <div class="form-group">
        <strong>Related Invoice Number:</strong>
        @Html.BootstrapTextBoxFor(model => model.InvoiceNumber, new { @class = "readonly"})
    </div>
    <div class="form-group">
        <strong>Net Amount (£) Number:</strong>
        @Html.BootstrapTextBoxFor(model => model.NetAmount, null, "{0:0.00}")
    </div>
    <div class="form-group" data-rates-url="@Url.Action("VatRates", "Supplier")">
        <strong>Vat Amount (£):</strong>
        @Html.BootstrapTextBoxFor(model => model.VatAmount, null, "{0:0.00}")
    </div>
    <div class="form-group">
        <span>
            @Html.CheckBoxFor(m => m.IsVatExempt)&nbsp;@Html.LabelFor(m => m.IsVatExempt, null, new { style = "display: inline" })
        </span>
        <span style="margin-left: 10px">
            @Html.CheckBoxFor(m => m.IsVatOverride)&nbsp;@Html.LabelFor(m => m.IsVatOverride, null, new { style = "display: inline" })
        </span>
    </div>
    <div class="editor-for editor-for-number">
        <strong>Gross Amount (£):</strong>
        @Html.BootstrapTextBoxFor(model => model.GrossAmount, new { @class = "readonly", @readonly = "readonly" }, "{0:0.00}")
    </div>
    
    
</div>
<p class="buttons">
    @{ var buttonText = string.IsNullOrEmpty(Model.CreditNumber) ? "Save" : "Save Changes"; }
    <input type="submit" value="@buttonText" class="btn btn-primary" />
</p>

