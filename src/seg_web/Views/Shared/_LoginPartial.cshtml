@using Booker.WebUI.Helpers
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="javascript:void(0)" class="dropdown-toggle" role="button" data-toggle="dropdown"><i class="fa fa-fw fa-user"></i> @User.Identity.Name <b class="caret"></b></a>

            <ul class="dropdown-menu" role="menu">
                <li>
                    @if (!(User.IsInRole(UserManagementHelper.ManagerOnDutyRoleName)) && !(User.IsInRole(UserManagementHelper.EngineerRoleName)))
                    {
                        @Html.Raw(String.Format("<a href=\"{0}\"><i class=\"fa fa-fw fa-cog\"></i> Manage</a>", @Url.Action("Manage", "Account")))
                    }
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </li>
            </ul>
        </li>
    </ul>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }

}
