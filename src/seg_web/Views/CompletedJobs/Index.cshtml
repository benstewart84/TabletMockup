@using Booker.Common
@using Booker.WebUI.Extensions
@model Booker.WebUI.Models.CompletedJobsModel
@using Booker.WebUI.Helpers
@{
    ViewBag.Title = "Completed jobs";
    ViewBag.MenuSection = "jobs-menu";
}
@section css {
    @Styles.Render("~/Content/themes/base/css")
}
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>Completed jobs</h2>
                <div class="main-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <fieldset class="header-fields">
                            <legend class="hidden">Search</legend>
                            <div class="header-row">
                                <div class="editor-for">
                                    @Html.LabelFor(model => model.DateFrom)
                                    @Html.EditorFor(model => model.DateFrom)
                                    @Html.ValidationMessageFor(model => model.DateFrom)
                                </div>
                                <div class="editor-for">
                                    @Html.LabelFor(model => model.DateTo)
                                    @Html.EditorFor(model => model.DateTo)
                                    @Html.ValidationMessageFor(model => model.DateTo)
                                </div>
                                <div style="clear:both">
                                    <input type="submit" value="Find" class="btn btn-primary" />
                                </div>
                            </div>
                        </fieldset>
                    }
                    @if (Model.Jobs != null)
                    {
                        <table id="completed-jobs" class="responsive clicktable" data-empty-table="There are no completed jobs within the specified dates">
                            <thead>
                                <tr>
                                    @if (!User.IsInRole(UserManagementHelper.SiteManagerRoleName) && !User.IsInRole(UserManagementHelper.MemberRoleName))
                                    {
                                        <th>Supplier</th>
                                    }
                                    <th>Work order Ref</th>
                                    <th>Job Ref</th>
                                    <th>Site</th>
                                    <th>Job Date</th>
                                    <th>Cost (£)</th>
                                    <th class="center-text">Certificate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Jobs)
                                {
                                    <tr>
                                        @if (!User.IsInRole(UserManagementHelper.SiteManagerRoleName) && !User.IsInRole(UserManagementHelper.MemberRoleName))
                                        {
                                            <td>@item.SupplierName</td>
                                        }
                                        <td>@item.WorkOrderRef</td>
                                        <td>@item.JobRef</td>
                                        <td>@item.SiteName</td>
                                        <td>@Html.TextOrEmptyString(item.AlarmDate.ToCurrentCultureDateTime())</td>
                                        <td class="right-text">@Html.DecimalToCurrencyString(item.GrossAmount)</td>
                                        @if (string.IsNullOrWhiteSpace(@item.CertificatePath) || item.CertificateStatus != CertificateStatus.Verified)
                                        {
                                            <td class="center-text">No Certificate available</td>
                                        }
                                        else
                                        {
                                            <td class="center-text">
                                                @Html.ActionLink("View", "ViewCertificate", "Certificate", new { jobRef = @item.JobRef }, new { id = "ViewCert", target = "_blank" })
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            <tfoot></tfoot>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jquerydatatables")
    @Scripts.Render("~/bundles/supplierhelpers")
}