@using Booker.WebUI.Helpers
@model Booker.WebUI.Models.QuotesAwaitingApproval.QueryQasViewModel

@using (Html.BeginForm("Query", "QuotesAwaitingApproval"))
{ 
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.QueryQuoteApprovalScenarioId)

    if (ViewBag.ReturnUrl != null)
    {
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>    
    }

    <fieldset class="form-panel">
        <legend>Query</legend>
        
        @Html.ActionValidationSummary("Query", true)

        @Html.LabelFor(model => model.SelectedQueryReason)
        @Html.DropDownListFor(model => model.SelectedQueryReason, Model.QueryReasonSelectList)
         @Html.ValidationMessageFor(model => model.SelectedQueryReason)
      
        @Html.LabelFor(model => model.Query)
        @Html.TextAreaFor(model => model.Query)
        @Html.ValidationMessageFor(model => model.Query)
       
        <input type="submit" value="Send Query" class="btn btn-primary" />

    </fieldset>
}
