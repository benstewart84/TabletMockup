@using Booker.WebUI.Helpers
@model Booker.WebUI.Models.QuotesAwaitingApproval.RejectQasViewModel

@using (Html.BeginForm("Reject", "QuotesAwaitingApproval"))
{   
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RejectQuoteApprovalScenarioId)

    if (ViewBag.ReturnUrl != null)
    {
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>    
    }

    <fieldset class="form-panel">
        <legend>Reject</legend>

        @Html.ActionValidationSummary("Reject", true)

        @Html.LabelFor(model => model.SelectedRejectionReason)
        @Html.DropDownListFor(model => model.SelectedRejectionReason, Model.QueryReasonSelectList)
        @Html.ValidationMessageFor(model => model.SelectedRejectionReason)
       
        @Html.LabelFor(model => model.RejectionNotes)
        @Html.TextAreaFor(model => model.RejectionNotes)
        @Html.ValidationMessageFor(model => model.RejectionNotes)

        <input type="submit" value="Reject Quote" class="btn btn-primary" />

    </fieldset>
}